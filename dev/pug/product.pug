extends layout/main

block variables
    -var title = 'Беговел Puky'
    -var pageClass = 'product-page'

block content
    .breadcrumbs
        .container
            ul.breadcrumbs__list
                li.breadcrumbs__item
                    a(href="index.html").breadcrumbs__link Главная
                li.breadcrumbs__item
                    a(href="index.html").breadcrumbs__link Каталог
                li.breadcrumbs__item
                    a(href="index.html").breadcrumbs__link Беговелы
                li.breadcrumbs__item
                    a(href="index.html").breadcrumbs__link Беговел-Каталка Puky Moto pink
                li.breadcrumbs__item
                    span.breadcrumbs__current Puky
    section.s-product
        .container
            .product
                .product__header
                    include pages/product/slider
                    .product-info
                        .product-info__header
                            h1.title-page Беговел-Каталка Puky Moto pink
                            img(src="static/images/content/brands/puky.jpg" alt="Картинка логотипа").product-info__logo
                        .product-info__body
                            .product-info__row
                                .product-rating
                                    .product-rating__stars
                                        +icon('star','product-rating__icon product-rating__icon--active')
                                        +icon('star','product-rating__icon product-rating__icon--active')
                                        +icon('star','product-rating__icon product-rating__icon--active')
                                        +icon('star','product-rating__icon product-rating__icon--active')
                                        +icon('star','product-rating__icon')
                                    .product-rating__count 3 отзыва
                                .product-info__articul
                                    span.product__text Артикул: <b>3015</b>
                            .product-info__row
                                .product-color
                                    span.product-text Выберите цвет
                                    ul.color-list
                                        each color in ['99ff9a','30d5c8','103090']
                                            li.color-list__item(style=`background-color:#${color}`)
                                .product-available
                                    span.product__text Наличие
                                    .product-available-view
                                        .product-available-view__item
                                        .product-available-view__item
                                        .product-available-view__item
                                        .product-available-view__item
                                        .product-available-view__item
                            .product-info__row
                                .product-price
                                    span.product-price__old 4 990 руб.
                                    span.product-price__current 3 390 руб.
                                    a(href="").product-info__link Нашли дешевле?
                                .product-actions
                                    button.btn.btn--big.btn--bg-orange Купить
                                    button.btn.btn--contour-gray.btn--big Купить в 1 клик
                        .product-info__footer
                            .product-info-advantages
                                .product-info-advantage
                                    .product-info-advantage__header
                                        +icon('pay','product-info-advantage__icon')
                                        span.product-info-advantage__title Оплата
                                    .product-info-advantage__body
                                        ul.product-list.product-list--advantage
                                            each item in ['Наличные','Электронные деньги','Сбербанк','Безналичная оплата']
                                                li.product-list__item=item
                                .product-info-advantage
                                    .product-info-advantage__header
                                        +icon('fast-delivery','product-info-advantage__icon')
                                        span.product-info-advantage__title Доставка
                                    .product-info-advantage__body
                                        .product__text По Москве сегодня курьером — <b>400 руб.</b> самовывоз с нашего магазина — <b>бесплатно</b>
                                .product-info-advantage
                                    .product-info-advantage__header
                                        +icon('map','product-info-advantage__icon')
                                        span.product-info-advantage__title Самовывоз
                                    .product-info-advantage__body
                                        .product__text г. Москва, ул. Строителей, 25
                .product__body
                    include pages/product/detals
    include pages/index/advantages
    include pages/product/goods
    include pages/category/content