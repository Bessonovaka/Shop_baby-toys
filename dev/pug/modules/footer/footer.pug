mixin footerNavLink(link,text)
    li.footer-nav__item
        a(href=link).footer-nav__link=text

footer.footer
    .footer__main
        .container
            .footer__navigation
                .footer__item
                    ul.footer-nav
                        +footerNavLink('#', 'Самокаты')
                        +footerNavLink('#', 'Велосипеды')
                        +footerNavLink('#', 'Роликовые коньки')
                        +footerNavLink('#', 'Скейты')
                        +footerNavLink('#', 'Батуты')
                        +footerNavLink('#', 'Детский спорт и отдых')
                        +footerNavLink('#', 'Аксессуары и запчасти')
                .footer__item
                    ul.footer-nav
                        +footerNavLink('#', 'О компании')
                        +footerNavLink('#', 'Доставка')
                        +footerNavLink('#', 'Оплата')
                        +footerNavLink('#', 'Поставщикам')
                        +footerNavLink('#', 'Новости')
                        +footerNavLink('#', 'Отзывы')
                .footer__item.footer__item--wide
                    ul.footer-nav
                        +footerNavLink('#', 'Контакты')
                        +footerNavLink('#', 'Вопросы и ответы')
                        +footerNavLink('#', 'Карта сайта')
                    span.footer__address Москва, ул. Строителей, 25
            .footer__contacts
                .footer__phones
                    a(href="tel:+").footer__phone 8 (800) 707-75-18
                    span.footer__text Звонок бесплатный
                    span.footer__text +7 (495) 120-30-34
                a(href="mailto:sale@baby-toys.ru").footer__mail sale@baby-toys.ru
            .footer__contacts-mobile
                .footer__item
                    a(href="tel:+").footer__phone 8 (800) 707-75-18                   
                    span.footer__text Звонок бесплатный
                .footer__item.footer__item--text-right
                    span.footer__text +7 (495) 120-30-34
                    a(href="mailto:sale@baby-toys.ru").footer__mail sale@baby-toys.ru
                .footer__item.footer__item--full
                    .yandex-market
                        img(src="static/images/content/socials/yandex.svg", alt="Яндекс-маркет")
                        a(href="#").btn.btn--small.btn--transparent-gray.btn--inline Оставить отзыв
    .footer__socials
        .container
            ul.socials
                li.socials__item
                    a(href="#").socials__link
                        img(src="static/images/content/socials/instagram.svg", alt="instagram").socials__icon
                        span.socials__name Instagram
                li.socials__item
                        a(href="#").socials__link
                            img(src="static/images/content/socials/facebook.svg", alt="Facebook").socials__icon
                            span.socials__name Facebook
                li.socials__item
                        a(href="#").socials__link
                            img(src="static/images/content/socials/ok.svg", alt="Одноклассники").socials__icon
                            span.socials__name Одноклассники
                li.socials__item
                        a(href="#").socials__link
                            img(src="static/images/content/socials/vk.svg", alt="Вконтакте").socials__icon
                            span.socials__name Вконтакте
            .yandex-market
                img(src="static/images/content/socials/yandex.svg", alt="Яндекс-маркет")
                a(href="#").btn.btn--small.btn--transparent-gray.btn--inline Оставить отзыв
    .footer__bottom
        .container
